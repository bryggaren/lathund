{
    "extends": "./tsconfig_a.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"]
        },
        "outDir": "build/dist",
        "target": "es5",
        "sourceMap": true,
        "jsx": "react",
        "lib": ["dom", "es2017"]
    },
    "exclude": ["node_modules", "build", "dist"],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useBabel": false
    }
}
