{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "max-line-length": [
            false
        ],
        "object-literal-sort-keys": false,
        "no-empty": false,
        "no-console": [
            false
        ],
        "variable-name": [
            true,
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ],
        "member-access": true,
        "no-reference": true,
        "prefer-for-of": true,
        "curly": true,
        "no-conditional-assignment": true,
        "no-construct": true,
        "no-duplicate-super": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "prefer-object-spread": true,
        "eofline": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "prefer-const": true,
        "class-name": true,
        "import-spacing": true,
        "interface-name": [
            true,
            "always-prefix"
        ],
        "jsdoc-format": true,
        "no-consecutive-blank-lines": true,
        "no-trailing-whitespace": true,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-finally",
            "check-open-brace",
            "check-whitespace"
        ],
        "ordered-imports": false,
        "prefer-method-signature": true,
        "semicolon": [
            true,
            "always"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type",
            "check-preblock"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never",
                "esSpecCompliant": true
            }
        ]
    },
    "rulesDirectory": []
}